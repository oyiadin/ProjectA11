<!--pages/misc/index.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">我的个人中心</view>
    <view class="page__desc">欢迎回来，{{name}}{{postfix}}！</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{apps}}" wx:key="{{item.title}}">
        <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../images/icons/index.png" />
          <view class="weui-grid__label">{{item.title}}</view>
        </navigator>
      </block>
    </view>
  </view>
  <view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-btn-area">
      <button class="weui-btn button-hover" type="primary" plain="true" bindtap='log_out'>登出</button>
    </view>
  </view>
</view>
